@page "/clients"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using BWAdminUi.Shared
@using Models.Post
@attribute [Authorize]
@inject HttpClient Http

<h1>Klanten overzicht</h1>

@if (_clients == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th></th>
            <th>Naam</th>
            <th>Referentie</th>
            <th>Adres</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var client in _clients)
        {
            <tr>
                <td>Todo go to detail</td>
                <td>@client.Info.Name</td>
                <td>@client.ClientReference</td>
                <td>@client.Info.StraatNaam @client.Info.HuisNummer @client.Info.BusNummer</td>
                <td>@client.Info.Postcode @client.Info.Gemeente</td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    private List<ClientDto> _clients;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _clients = await Http.GetFromJsonAsync<List<ClientDto>>("api/clients/all");
        }
        catch (AccessTokenNotAvailableException exception)
        {
            exception.Redirect();
        }
    }

}